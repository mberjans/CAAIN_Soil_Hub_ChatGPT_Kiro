# AFAS AI Agent Service Environment Configuration

# Service Configuration
AI_AGENT_PORT=8002
DEBUG=true

# OpenRouter Configuration
OPENROUTER_API_KEY=sk-or-your-api-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# LLM Service Configuration
MAX_CONVERSATION_LENGTH=20
CONTEXT_WINDOW_TOKENS=4000
ENABLE_STREAMING=true
CACHE_RESPONSES=true
CACHE_TTL_SECONDS=3600

# Model Configuration (optional overrides)
OPENROUTER_EXPLANATION_MODEL=anthropic/claude-3-sonnet
OPENROUTER_CLASSIFICATION_MODEL=openai/gpt-4-turbo
OPENROUTER_CONVERSATION_MODEL=anthropic/claude-3-sonnet
OPENROUTER_BULK_MODEL=openai/gpt-3.5-turbo
OPENROUTER_FALLBACK_MODEL=meta-llama/llama-3-8b-instruct

# Database Configuration (if needed for conversation persistence)
DATABASE_URL=postgresql://user:password@localhost:5432/afas_ai_agent
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security Configuration
API_KEY_HEADER=X-API-Key
CORS_ORIGINS=*
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090