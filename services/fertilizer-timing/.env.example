# Fertilizer Timing Service - Integration Configuration

# Integration Mode
# Options: direct_import, rest_api, hybrid
# - direct_import: Use Python module imports (legacy mode)
# - rest_api: Use HTTP REST APIs only
# - hybrid: Try REST API first, fallback to direct import
INTEGRATION_MODE=hybrid

# Service URLs
FERTILIZER_STRATEGY_URL=http://localhost:8007
WEATHER_SERVICE_URL=http://localhost:8001
SOIL_SERVICE_URL=http://localhost:8002
CROP_SERVICE_URL=http://localhost:8003

# Fertilizer Strategy Service Configuration (runs on port 8009)
FERTILIZER_STRATEGY_URL=http://localhost:8009
FERTILIZER_STRATEGY_TIMEOUT=30
FERTILIZER_STRATEGY_MAX_RETRIES=3
FERTILIZER_STRATEGY_RETRY_DELAY=1.0
FERTILIZER_STRATEGY_CIRCUIT_BREAKER_THRESHOLD=5
FERTILIZER_STRATEGY_CIRCUIT_BREAKER_TIMEOUT=60
FERTILIZER_STRATEGY_HEALTH_PATH=/health

# Weather Service Configuration
WEATHER_SERVICE_TIMEOUT=15
WEATHER_SERVICE_MAX_RETRIES=3

# Soil Service Configuration
SOIL_SERVICE_TIMEOUT=15
SOIL_SERVICE_MAX_RETRIES=3

# Crop Service Configuration
CROP_SERVICE_TIMEOUT=15
CROP_SERVICE_MAX_RETRIES=3

# Integration Features
ENABLE_REQUEST_LOGGING=true
ENABLE_CIRCUIT_BREAKER=true
ENABLE_RETRY=true

# Fertilizer Timing Service (changed from 8009 to avoid conflict with fertilizer-strategy)
FERTILIZER_TIMING_SERVICE_PORT=8010
