  "shortcuts": [
    {
      "name": "Start New Application",
      "short_name": "New App",
      "description": "Start a new fertilizer application",
      "url": "/mobile-fertilizer-application",
      "icons": [
        {
          "src": "/static/images/shortcut-new.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "View Field Map",
      "short_name": "Field Map",
      "description": "View field map and boundaries",
      "url": "/mobile-fertilizer-application?step=5",
      "icons": [
        {
          "src": "/static/images/shortcut-map.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://caain-soil-hub.com/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+fertilizer",
      "url": "/mobile-fertilizer-application?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/mobile-fertilizer-application",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  "share_target": {
    "action": "/mobile-fertilizer-application/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "field_photo",
          "accept": ["image/*"]
        }
      ]
    }
  }
}