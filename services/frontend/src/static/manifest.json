  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://caain-soil-hub.com/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "capture_links": "new-client",
  "file_handlers": [
    {
      "action": "/mobile-variety-selection",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+variety",
      "url": "/mobile-variety-selection?crop=%s"
    }
  ],
  "share_target": {
    "action": "/mobile-variety-selection",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "variety_data",
          "accept": ["application/json", "text/csv"]
        }
      ]
    }
  },
  "permissions": [
    "geolocation",
    "camera",
    "microphone",
    "notifications"
  ],
  "features": [
    "Cross Platform",
    "fast",
    "simple"
  ],
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7"
