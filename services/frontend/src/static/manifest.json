  "shortcuts": [
    {
      "name": "Quick Assessment",
      "short_name": "Quick Assess",
      "description": "Start a quick drought assessment",
      "url": "/mobile-drought-management?action=quick-assess",
      "icons": [
        {
          "src": "/static/images/shortcut-quick-assess.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Field Monitoring",
      "short_name": "Monitor",
      "description": "View field monitoring data",
      "url": "/mobile-drought-management?action=monitor",
      "icons": [
        {
          "src": "/static/images/shortcut-monitor.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Emergency Protocol",
      "short_name": "Emergency",
      "description": "Access emergency drought protocols",
      "url": "/mobile-drought-management?action=emergency",
      "icons": [
        {
          "src": "/static/images/shortcut-emergency.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://caain-soil-hub.com/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "capture_links": "new-client",
  "protocol_handlers": [
    {
      "protocol": "web+drought",
      "url": "/mobile-drought-management?field=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/mobile-drought-management?action=import-data",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  "share_target": {
    "action": "/mobile-drought-management?action=share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "photos",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "features": [
    "Cross Platform",
    "fast",
    "simple"
  ],
  "suggested_display": "standalone",
  "display_override": ["window-controls-overlay", "standalone"],
  "edge_side_panel": {
    "preferred_width": 400
  }
}