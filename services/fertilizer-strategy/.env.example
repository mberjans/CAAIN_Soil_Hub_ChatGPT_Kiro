# Fertilizer Strategy Service - Configuration

# Service Configuration
FERTILIZER_STRATEGY_PORT=8009

# Integration Mode
# Options: direct_import, rest_api, hybrid
# - direct_import: Use Python module imports (legacy mode)
# - rest_api: Use HTTP REST APIs only
# - hybrid: Try REST API first, fallback to direct import
INTEGRATION_MODE=rest_api

# External Service URLs
FERTILIZER_TIMING_URL=http://localhost:8010
WEATHER_SERVICE_URL=http://localhost:8001
SOIL_SERVICE_URL=http://localhost:8002
CROP_SERVICE_URL=http://localhost:8003

# Fertilizer Timing Service Configuration (runs on port 8010)
FERTILIZER_TIMING_TIMEOUT=30
FERTILIZER_TIMING_MAX_RETRIES=3
FERTILIZER_TIMING_RETRY_DELAY=1.0
FERTILIZER_TIMING_CIRCUIT_BREAKER_THRESHOLD=5
FERTILIZER_TIMING_CIRCUIT_BREAKER_TIMEOUT=60
FERTILIZER_TIMING_HEALTH_PATH=/health

# Weather Service Configuration
WEATHER_SERVICE_TIMEOUT=15
WEATHER_SERVICE_MAX_RETRIES=3

# Soil Service Configuration
SOIL_SERVICE_TIMEOUT=15
SOIL_SERVICE_MAX_RETRIES=3

# Crop Service Configuration
CROP_SERVICE_TIMEOUT=15
CROP_SERVICE_MAX_RETRIES=3

# Integration Features
ENABLE_REQUEST_LOGGING=true
ENABLE_CIRCUIT_BREAKER=true
ENABLE_RETRY=true

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/fertilizer_strategy
COMMODITY_DATABASE_URL=postgresql://user:password@localhost:5432/commodity_prices

# Price Update Schedule
PRICE_UPDATE_INTERVAL=3600
ENABLE_SCHEDULED_UPDATES=true

# API Configuration
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
